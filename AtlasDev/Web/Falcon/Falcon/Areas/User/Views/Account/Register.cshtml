@using Falcon.Gyrkin.Library.Extensions
<!-- BEGIN BODY -->
<body class="login">
  <!-- BEGIN LOGO -->
  <div class="logo">
    <img src="~/assets/img/logo-big.png" alt="" />
  </div>
  <!-- END LOGO -->
  <!-- BEGIN LOGIN -->
  <div class="content">
    <!-- BEGIN LOGIN FORM -->
    <div class="token" ng-cloak @Html.RequestVerificationToken() />
    <!-- BEGIN REGISTRATION FORM -->

    <form class="register-form" name="registerForm" ng-submit="registerForm.$valid && register()" novalidate ng-controller="RegisterController" style="display: block;">
      {{ registerForm.$valid }}
      <h3>Sign Up</h3>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
          <i class="fa fa-user"></i>
          <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" char-limit="10" required ng-model="username" />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <div class="input-icon">
          <i class="fa fa-lock"></i>
          <input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" name="password" placeholder="Password" char-limit="30" ng-model="password" required />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
        <div class="controls">
          <div class="input-icon">
            <i class="fa fa-check"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" char-limit="30" placeholder="Re-type Your Password" name="rpassword" />
          </div>
        </div>
      </div>
      <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">ID No / Passport No</label>
        <div class="input-icon">
          <i class="fa fa-user"></i>
          <input class="form-control placeholder-no-fix" type="text" placeholder="ID No / Passport No" name="IdNoOrPassportNo" char-limit="13" required ng-model="idNoOrPassportNo" />
        </div>
      </div>
      <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Cell No</label>
        <div class="input-icon">
          <i class="fa fa-mobile"></i>
          <input class="form-control placeholder-no-fix" type="text" placeholder="Cell No" name="cellNo" char-limit="10" required ng-model="cellNo" />
        </div>
      </div>
      <div class="form-actions">
        <button id="register-back-btn" type="button" class="btn" ng-click="back()">
          <i class="m-icon-swapleft"></i> Back
        </button>
        <button ladda-button="loading" data-size="s" class="pull-right ladda-button" id="register-submit-btn" data-color="green" type="submit" data-style="slide-up">
          <span class="ladda-label">Sign-Up</span><span class="ladda-spinner"></span>
        </button>
      </div>
    </form>
    <!-- END REGISTRATION FORM -->
  </div>
  <!-- END LOGIN -->
  <div class="copyright">
    2013 &copy; Atlas Finance
  </div>

  @section Scripts
  {
    <!--[if lt IE 9]>
      <script src="assets/plugins/respond.min.js"></script>
      <script src="assets/plugins/excanvas.min.js"></script>
      <![endif]-->
    @Scripts.Render("~/loginJs")
    @Scripts.Render("~/angularjs")
    @Scripts.Render("~/falcon")
    @Scripts.Render("~/RegisterController")
    <script>
      jQuery(document).ready(function () {
        App.init();
        Login.registerInit();
      });
    </script>
  }
</body>
<!-- END BODY -->
@section LoginCSS{
  @Styles.Render("~/LoginCSS")
}