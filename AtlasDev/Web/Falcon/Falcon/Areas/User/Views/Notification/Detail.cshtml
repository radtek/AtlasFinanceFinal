@using Falcon.Gyrkin.Library.Extensions
@{
  ViewBag.Title = "Notification";
}
<div ng-controller="NotificationDetailController" ng-init="init(@Html.Json((object)ViewBag.PersonId), @Html.Json((Guid)ViewBag.notificationId))">
  <div class="row">
    <div>
      <span ng-show="!loaded" class="spinner" us-spinner="{radius:10, width:3, length: 10}"></span>
    </div>
  </div>
  <div class="col-lg-12 ng-cloak" ng-show="loaded">
    <section class="panel tasks-widget">
      <header class="panel-heading">
        Notification
      </header>
      <div class="panel-body">
        <div class="task-content">
        </div>
      </div>
    </section>
  </div>
</div>