<div ng-controller="AccountClientEmployerController">
  <section class="panel">
    <section class="panel-body">
      <div class="row">
        <div class="col-md-2">
          <legend style="font-size:large !important;">Employers</legend>
          <select data-ng-attr-size="{{employers.length >= 5 ? employers.length : employers.length + 5}}" data-ng-model="selectedItem" class=" form-control"
                  data-ng-options="employer.CompanyId as employer.Name for employer in employers"></select>
        </div>
        <div class="col-md-10">
          <legend style="font-size:large !important;">Details</legend>
          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Company</strong></h3></div>
                <div class="panel-body">
                  <div class="form-group">
                    <input type="text" class="form-control" style="border-radius:0px" id="companyNameInput" placeholder="{{employer.Name}}" disabled>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Address Details</strong></h3></div>
                <div class="panel-body">
                  <div ng-repeat="address in employer.Addresses">
                    <div class="form-horizontal">
                      <fieldset>
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="textinput">Line 1</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="{{address.Line1}}" disabled />
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="textinput">Line 2</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="{{address.Line2}}" disabled />
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="textinput">Line 3</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="{{address.Line3}}" disabled />
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="textinput">City</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="{{ address.Line4 }}" disabled />
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="select">Province</label>
                          <div class="col-sm-4">
                            <input type="text" placeholder="{{address.Province}}" class="form-control" disabled />
                            <!--<select class="form-control input-sm">
              <option>Option 1</option>
              <option>Option 2</option>
              <option>Option 3</option>
            </select>-->
                          </div>
                          <label class="col-sm-2 control-label" for="textinput">Postcode</label>
                          <div class="col-sm-4">
                            <input type="text" placeholder="{{address.PostalCode}}" class="form-control" disabled />
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                              <button type="submit" class="btn btn-success" href="#personalDlg" ng-click="UpdateAddress(address.AddressId)" data-toggle="modal">Update</button>
                            </div>
                          </div>
                        </div>
                      </fieldset>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Contact</strong></h3></div>
                <div class="panel-body">
                  <div ng-repeat="contacts in employer.Contacts">
                    <div class="form-group" ng>
                      <label for="{{ contacts.ContactId }}">{{ contacts.Type }}</label>
                      <input type="email" class="form-control" style="border-radius:0px" id="{{ contacts.ContactId }}" placeholder="Contact No." value="{{ contacts.No }}">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </section>
</div>
