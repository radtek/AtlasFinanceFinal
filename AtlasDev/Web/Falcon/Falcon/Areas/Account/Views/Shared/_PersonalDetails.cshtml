

<div ng-controller="AccountPersonalController">
  <div class="tabbable-custom">
    <ul class="nav nav-tabs" id="accPersonTab">
      <li class="">
        <a href="#pdd" data-toggle="tab">
          Personal
        </a>
      </li>
      <li class="">
        <a href="#adr" data-toggle="tab">
          Relation
        </a>
      </li>
      <li class="">
        <a href="#emp" data-toggle="tab">
          Employer
        </a>
      </li>
      <li class="">
        <a href="#adh" data-toggle="tab">
          History
        </a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane" id="pdd">
        @{Html.RenderPartial("_Client_Personal");}
      </div>
      <div class="tab-pane" id="adr">
        @{Html.RenderPartial("_Client_Relation");}
      </div>
      <div class="tab-pane" id="emp">
        @{Html.RenderPartial("_Client_Employer");}
      </div>
      <div class="tab-pane" id="adh">
        @{Html.RenderPartial("_Client_History");}
      </div>
    </div>
  </div>

  <div class="modal fade modal-overflow" id="personalDlg" data-backdrop="static" data-keyboard="false" boot-modal role="basic">
    <div class="modal-dialog modal-full" ng-if="DlgWnd === 2">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title">Credit Report</h4>
        </div>
        <div class="modal-body">
          <div ng-bind-html-unsafe="" style="height:400px;"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn default" data-dismiss="modal">Close</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <div class="modal-dialog" ng-if="DlgWnd === 'AddressModal'">
      <div class="modal-content">
        <div class="modal-header">
          <center>
            <h4 class="modal-title">
              <span class="pull-left"> Add Address</span>
            </h4>
            <div class="clearfix" />
          </center>
        </div>
        <div class="modal-body">
          <div class="form-horizontal">
            <fieldset>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Line 1</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="Address Line 1" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Line 2</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="Address Line 2" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">City</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="City" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="select">Province</label>
                <div class="col-sm-4">
                  <select class="form-control input-sm">
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                  </select>
                </div>
                <label class="col-sm-2 control-label" for="textinput">Postcode</label>
                <div class="col-sm-4">
                  <input type="text" placeholder="Post Code" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="pull-right">
                    <button type="submit" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
                </div>
              </div>
            </fieldset>
          </div>
          <!-- /.modal-content -->
        </div>
        <div class="modal-dialog modal-small" ng-if="DlgWnd === 3">
          <div class="modal-content">
            <div class="modal-header">
              <center>
                <h4 class="modal-title">
                  Performing new credit enquiry...
                </h4>
              </center>
            </div>
            <div class="modal-body">
              <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                  <span class="sr-only">
                  </span>
                </div>
              </div>
              <p>
                {{ status }}
              </p>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
    </div>

    <div class="modal-dialog" ng-if="DlgWnd === 'UpdateAddressModal'">
      <div class="modal-content">
        <div class="modal-header">
          <center>
            <h4 class="modal-title">
              <span class="pull-left"> Update Address</span>
            </h4>
            <div class="clearfix" />
          </center>
        </div>
        <div class="modal-body">
          <div class="form-horizontal">
            <fieldset>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Line 1</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="Address Line 1" class="form-control" ng-bind="Update.Line1" value="{{Address.Line1}}">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Line 2</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="Address Line 2" class="form-control" ng-bind="update.Line2" value="{{Address.Line2}}">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Line3</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="Address Line 3" class="form-control" ng-bind="update.Line3" value="{{Address.Line3}}">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">City</label>
                <div class="col-sm-10">
                  <input type="text" placeholder="City" class="form-control" ng-bind="update.Line4" value="{{Address.Line4}}">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="select">Province</label>
                <div class="col-sm-4">
                  <select class="form-control input-sm">
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                  </select>
                </div>
                <label class="col-sm-2 control-label" for="textinput" >PostalCode</label>
                <div class="col-sm-4">
                  <input type="text" placeholder="Post Code" class="form-control" value="{{Address.PostalCode}}" ng-bind="update.PostalCode">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="pull-right">
                    <button type="submit" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" ng-click="addressUpdateFn">Save</button>
                  </div>
                </div>
              </div>
            </fieldset>
          </div>
          <!-- /.modal-content -->
        </div>
        <div class="modal-dialog modal-small" ng-if="DlgWnd === 3">
          <div class="modal-content">
            <div class="modal-header">
              <center>
                <h4 class="modal-title">
                  Performing new credit enquiry...
                </h4>
              </center>
            </div>
            <div class="modal-body">
              <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                  <span class="sr-only">
                  </span>
                </div>
              </div>
              <p>
                {{ status }}
              </p>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
    </div>
  </div>
</div>