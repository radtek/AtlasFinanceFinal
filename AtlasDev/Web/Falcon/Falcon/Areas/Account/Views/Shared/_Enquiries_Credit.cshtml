<div ng-controller="AccountEnquiriesCreditController">
  <section class="panel">
    <section class="panel-body">
      <div class="tabbable-custom">
        <ul class="nav nav-tabs" id="accCreditEnqTab">
          <li class="">
            <a href="#crae" data-toggle="tab">
              Credit
            </a>
          </li>
          <li class="">
            <a href="#craa" data-toggle="tab">
              Accounts
            </a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane" id="crae">
            @{Html.RenderPartial("_Enquiries_Credit_Enquries");}
          </div>
          <div class="tab-pane" id="craa">
            @{Html.RenderPartial("_Enquiries_Credit_Accounts");}
          </div>
        </div>
      </div>
      <div class="modal fade" id="creditDlg" data-backdrop="static" data-keyboard="false" boot-modal>
        <div class="modal-dialog modal-full" ng-if="DlgWnd === 2">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
              <h4 class="modal-title">Credit Report</h4>
            </div>
            <div class="modal-body">
              <div ng-bind-html-unsafe="" style="height:400px;"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn default" data-dismiss="modal">Close</button>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <div class="modal-dialog modal-small" ng-if="DlgWnd === 1">
          <div class="modal-content">
            <div class="modal-header">
              <center>
                <h4 class="modal-title">
                  Waiting for credit response...
                </h4>
              </center>
            </div>
            <div class="modal-body">
              <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                  <span class="sr-only">

                  </span>
                </div>
              </div>
              <p>
                {{ status }}
              </p>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <div class="modal-dialog modal-small" ng-if="DlgWnd === 3">
          <div class="modal-content">
            <div class="modal-header">
              <center>
                <h4 class="modal-title">
                  Performing new credit enquiry...
                </h4>
              </center>
            </div>
            <div class="modal-body">
              <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                  <span class="sr-only">

                  </span>
                </div>
              </div>
              <p>
                {{ status }}
              </p>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
    </section>
  </section>
</div>