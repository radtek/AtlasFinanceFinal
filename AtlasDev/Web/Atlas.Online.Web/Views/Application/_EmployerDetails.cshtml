@model Atlas.Online.Web.Models.Steps.EmployerDetailsStep

@using Atlas.Online.Web.Extensions.Ng;

@using (Html.NgBeginForm(
  method: FormMethod.Post,
  prefixNgModel: "data",
  htmlAttributes: new Dictionary<string, object>() {
   { "name", "form" }, { "novalidate", "novalidate" }
  }))
{
  <p class="fc-beta mt-none fs-zeta">
Please provide us with your employer details
</p>

  <div class="row cf mb-gamma">
	 <div class="col md-1-2 pr-alpha sm-no-padding">
		<div class="row row-ib-cols row-ib-cols-va-m cf">

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.NameOfCompany, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
					@Html.NgTextBoxFor(m => m.EmployerDetails.NameOfCompany, new Dictionary<string, object>() { 
            {"class", "d-block" },
            { "autofocus", null }
          })
				</div><!-- .col -->
				@Html.NgValidationMessagesFor(m => m.EmployerDetails.NameOfCompany)
			</div>

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.WorkNumber, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
					@Html.NgTextBoxFor(m => m.EmployerDetails.WorkNumber, new Dictionary<string, object>() {
            { "class", "d-block" }
          })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.WorkNumber)
			</div>

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.ContactNo, new { @class = "field-label" })
          @Html.NgTooltip(title: "This is the number of your HR department or Head Office.")
				</div><!-- .col -->
				<div class="col sm-2-3">
					@Html.NgTextBoxFor(m => m.EmployerDetails.ContactNo, new Dictionary<string, object>() {
            { "class", "d-block" },
          })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.ContactNo)
			</div>

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.AddressLine1, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
					@Html.NgTextBoxFor(m => m.EmployerDetails.AddressLine1, new { @class = "d-block" })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.AddressLine1)
			</div>

			<div class="field cf">
				<div class="col sm-2-3 col-push-pull xpush-5 col-float-right">
					@Html.NgTextBoxFor(m => m.EmployerDetails.AddressLine2, new { @class = "d-block" })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.AddressLine2)
			</div>

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.City, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
					@Html.NgTextBoxFor(m => m.EmployerDetails.City, new { @class = "d-block" })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.City)
			</div>

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.Province, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
					<div class="row cf">
						<div class="col col-8 pr-micro">
					    @Html.NgDropDownListFor(m => m.EmployerDetails.Province, new { @class = "d-block" })
						</div><!-- .col -->
						<div class="col col-4">
					    @Html.NgTextBoxFor(m => m.EmployerDetails.PostalCode, new { @class = "d-block" })
						</div><!-- .col -->
					</div><!-- .row -->
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.Province)
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.PostalCode)
			</div>

		</div><!-- .row -->
	</div><!-- .col -->

	<div class="col md-1-2 pl-alpha sm-no-padding">
		<div class="row row-ib-cols row-ib-cols-va-m cf">

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.EmployerDetails.Industry, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
			    @Html.NgDropDownListFor(m => m.EmployerDetails.Industry, new { @class = "d-block" })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.EmployerDetails.Industry)
			</div>

			<div class="field cf">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.SalaryFrequency, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
			    @Html.NgDropDownListFor(m => m.SalaryFrequency, new Dictionary<string, object>() {
            { "class", "d-block" },
          })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.SalaryFrequency)
			</div>

			<div class="field cf" ng-show="+data.SalaryFrequency">
				<div class="col sm-1-3 pr-alpha">
					@Html.LabelFor(m => m.SalaryPayDay, new { @class = "field-label" })
				</div><!-- .col -->
				<div class="col sm-2-3">
			    @Html.NgDropDownListFor(m => m.SalaryPayDay, new Dictionary<string, object>() {
            {"class", "d-block"},
            {"show", "+data.SalaryFrequency != SALARY_FREQ.MONTHLY"}
          })
			    @Html.NgDropDownListFor(m => m.SalaryPayDayNumber, new Dictionary<string, object>() {
            {"class", "d-block"},
            {"show", "+data.SalaryFrequency == SALARY_FREQ.MONTHLY"}
          })
				</div><!-- .col -->
        @Html.NgValidationMessagesFor(m => m.SalaryPayDay)
        @Html.NgValidationMessagesFor(m => m.SalaryPayDayNumber)
			</div>

		</div><!-- .row -->
	</div><!-- .col -->

</div><!-- .row -->
}
